#!/bin/bash
pwd="/xen-4.16-imx/my-unikernel/apps/app-helloworld"
app="helloworld_xen-arm64"
# pwd="/xen-4.16-imx/my-unikernel/apps/app-httpreply/"
# app="httpreply_xen-arm64"
